<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Warna border -->
            <corners android:radius="16dp"/> <!-- Radius sudut -->
            <stroke android:width="2dp" android:color="#DDDDDD"/> <!-- Lebar dan warna border -->
        </shape>
    </item>
    <!-- Background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Warna background gambar -->
            <corners android:radius="16dp"/> <!-- Radius sudut -->
        </shape>
    </item>
</layer-list>
